    <!-- Scroll to Top Button -->
    <button id="scrollToTop" class="scroll-to-top bg-indigo-600 text-white w-12 h-12 rounded-full shadow-lg flex items-center justify-center">
        <i class="fas fa-arrow-up"></i>
